<body>
    <%- include('./partials/nav.ejs') %>
    <div class="container">
        <div class="blogs content">
            <h2>All Blogs</h2>
            <% if(blogs.length > 0) { %>
                <% blogs.forEach(blog=> { %>
                    <h3 class="title"><%= blog.title %></h3>
                    <p class="snippet"><%= blog.snippet %></p>
                <% }) %>
            <% } else { %>
                <p>There are no blogs to display...</p>
            <% } %>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>